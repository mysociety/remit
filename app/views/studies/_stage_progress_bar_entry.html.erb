<li class="step--<%= state %>"
    title="<%= Study.description_for_stage(stage).html_safe %>"
    data-toggle="tooltip"
    data-placement="right">
  <% if state == "done" %>
    <img src="<%= image_path('tick.png') %>"
         srcset="<%= image_path('tick.svg') %>"
         width="18" height="16">
  <% end %>
    <%= label %>
</li>