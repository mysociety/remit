<% if delivery_update.present? %>
  <table class="delivery-update__details">
    <thead>
      <tr>
        <th>Data collection</th>
        <th>Data analysis</th>
        <th>Interpretation &amp; write up</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="delivery-update__status--<%= delivery_update.data_collection_status.good_medium_bad_or_neutral%>">
          <%= delivery_update.data_collection_status.name %>
        </td>
        <td class="delivery-update__status--<%= delivery_update.data_analysis_status.good_medium_bad_or_neutral%>">
          <%= delivery_update.data_analysis_status.name %>
        </td>
        <td class="delivery-update__status--<%= delivery_update.interpretation_and_write_up_status.good_medium_bad_or_neutral%>">
          <%= delivery_update.interpretation_and_write_up_status.name %>
        </td>
      </tr>
    </tbody>
  </table>
  <% unless delivery_update.comments.blank? %>
    <p><%= delivery_update.comments %></p>
  <% end %>
  <p class="delivery-update__time">Delivery status updated <%= time_ago_in_words(delivery_update.created_at) %> ago</p>
<% end %>